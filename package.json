{
  "name": "ibm-openapi-validator",
  "workspaces": [
    "packages/validator-tool",
    "packages/ibm-oas-ruleset"
  ],
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/IBM/openapi-validator",
  "scripts": {
    "clean": "rm -rf node_modules/ && npm run clean --workspaces",
    "force-deps": "npx npm-force-resolutions",
    "test": "npm run test --workspaces",
    "jest": "jest",
    "test-travis": "npm run test-travis --workspaces",
    "lint": "npm run lint --workspaces",
    "fix": "npm run fix --workspaces",
    "pkg": "npm run pkg --workspace packages/validator-tool",
    "link": "npm run link --workspace packages/validator-tool",
    "unlink": "npm run unlink --workspace packages/validator-tool"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^8.0.3",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-prettier": "^2.7.0",
    "jest": "^26.6.3",
    "npm-force-resolutions": "0.0.10",
    "prettier": "^1.19.1",
    "semantic-release": "^18.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "pac-resolver": "5.0.0"
  }
}
