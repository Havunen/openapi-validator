{
  "name": "@openapi-validator/cli",
  "version": "1.0.0",
  "description": "Openapi validator",
  "author": "András Csányi <andras.csanyi@pm.me>",
  "homepage": "https://github.com/IBM/openapi-validator#readme",
  "license": "ISC",
  "main": "src/utils/cli.js",
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IBM/openapi-validator.git"
  },
  "scripts": {
    "force-deps": "npx npm-force-resolutions",
    "link": "npm install -g",
    "unlink": "npm uninstall -g",
    "test": "jest __tests__/",
    "jest": "jest",
    "report-coverage": "codecov",
    "lint": "eslint --cache --quiet --ext '.js' src __tests__",
    "lint-fix": "eslint --fix --ext '.js' src __tests__",
    "pkg": "./node_modules/.bin/pkg --out-path=./bin ./package.json; cd bin; rename -f 's/@openapi-validator/cli-(linux|macos|win)/lint-openapi-$1/g' ./openapi-validator-cli-*"
  },
  "bugs": {
    "url": "https://github.com/IBM/openapi-validator/issues"
  },
  "dependencies": {
    "@acsanyi-test/openapi-validator-core": "^1.0.3",
    "@acsanyi-test/simple-rule": "^1.0.0",
    "@stoplight/spectral-core": "^1.6.0",
    "@types/node": "^16.11.6",
    "babel-eslint": "^10.1.0",
    "commander": "^8.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "find-up": "^6.2.0",
    "prettier": "^2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "__files__",
      "__rules__"
    ],
    "moduleNameMapper": {
      "^nimma/fallbacks$": "<rootDir>/node_modules/nimma/dist/cjs/fallbacks/index.js",
      "^nimma/legacy$": "<rootDir>/node_modules/nimma/dist/legacy/cjs/index.js"
    }
  },
  "bin": {
    "openapi-validator-cli": "src/utils/cli.js"
  },
  "engines": {
    "node": ">=8.9.0"
  }
}
